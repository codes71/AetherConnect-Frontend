{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.build.json",
    "outDir": "dist",
    "deleteOutDir": false,
    "assets": [
      { "include": "**/*.hbs", "outDir": "dist" },
      { "include": "**/*.proto", "outDir": "dist" }
    ]
  }
}
